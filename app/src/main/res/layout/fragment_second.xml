<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/background_light" tools:context=".SecondFragment">
	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
		<!-- 应用信息卡片 -->
		<androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" app:cardCornerRadius="12dp" app:cardElevation="4dp" app:cardBackgroundColor="@color/surface_color">
			<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
				<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_name" android:textSize="24sp" android:textStyle="bold" android:textColor="@color/primary_blue" android:layout_gravity="center_horizontal" android:layout_marginBottom="8dp" />
				<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_version" android:textSize="14sp" android:textColor="@color/text_secondary" android:layout_gravity="center_horizontal" android:layout_marginBottom="16dp" />
				<TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/app_description" android:textSize="16sp" android:textColor="@color/text_primary" android:lineSpacingExtra="4dp" android:gravity="center" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>
		<!-- 功能特性卡片 -->
		<androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" app:cardCornerRadius="12dp" app:cardElevation="4dp" app:cardBackgroundColor="@color/surface_color">
			<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
				<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/features_title" android:textSize="18sp" android:textStyle="bold" android:textColor="@color/primary_blue" android:layout_marginBottom="12dp" />
				<TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/feature_batch_scan" android:textSize="14sp" android:textColor="@color/text_primary" android:drawableStart="@drawable/ic_check" android:drawablePadding="8dp" android:layout_marginBottom="8dp" />
				<TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/feature_history" android:textSize="14sp" android:textColor="@color/text_primary" android:drawableStart="@drawable/ic_check" android:drawablePadding="8dp" android:layout_marginBottom="8dp" />
				<TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/feature_excel_export" android:textSize="14sp" android:textColor="@color/text_primary" android:drawableStart="@drawable/ic_check" android:drawablePadding="8dp" android:layout_marginBottom="8dp" />
				<TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/feature_multiple_formats" android:textSize="14sp" android:textColor="@color/text_primary" android:drawableStart="@drawable/ic_check" android:drawablePadding="8dp" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>
		<!-- 开发者信息卡片 -->
		<androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" app:cardCornerRadius="12dp" app:cardElevation="4dp" app:cardBackgroundColor="@color/surface_color">
			<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
				<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/developer_info_title" android:textSize="18sp" android:textStyle="bold" android:textColor="@color/primary_blue" android:layout_marginBottom="12dp" />
				<TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/developer_name" android:textSize="16sp" android:textColor="@color/text_primary" android:layout_marginBottom="8dp" />
				<TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/developer_email" android:textSize="14sp" android:textColor="@color/accent_green" android:layout_marginBottom="8dp" />
				<TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/copyright_info" android:textSize="12sp" android:textColor="@color/text_secondary" android:layout_marginTop="8dp" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>
		<!-- 技术信息卡片 -->
		<androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="12dp" app:cardElevation="4dp" app:cardBackgroundColor="@color/surface_color">
			<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">
				<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tech_info_title" android:textSize="18sp" android:textStyle="bold" android:textColor="@color/primary_blue" android:layout_marginBottom="12dp" />
				<TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/tech_framework" android:textSize="14sp" android:textColor="@color/text_primary" android:layout_marginBottom="4dp" />
				<TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/tech_libraries" android:textSize="14sp" android:textColor="@color/text_primary" android:layout_marginBottom="4dp" />
				<TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/tech_database" android:textSize="14sp" android:textColor="@color/text_primary" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>
	</LinearLayout>
</ScrollView>
